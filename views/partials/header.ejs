    /* aqcuired from https://uicookies.com/link-style-css/*/
  .nav-link {
      font-size: 30px;
  background-image: linear-gradient(
    to right,
    #54b3d6,
    #54b3d6 50%,
    #000 50%
  );
  background-size: 200% 100%;
  background-position: -100%;
  display: inline-block;
  padding: 5px 0;
  position: relative;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  transition: all 0.3s ease-in-out;
  }

  .nav-link:before {
    content: '';
    background: #54b3d6;
    display: block;
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 0;
    height: 3px;
    transition: all 0.3s ease-in-out;
  }

  .nav-link:hover {
   background-position: 0;
  }

  .nav-link:hover::before {
    width:100%;
  }

  img.pic {
    width:100%;
    max-width:300px;
  }
  </style>
